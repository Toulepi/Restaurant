{% extends 'base.html.twig' %}

{% block title %} Fiche Produit {% endblock %}

{% block body %}
{#        {{ dump(produit) }}#}
        <h1 class="text-center my-5">
            {{ produit.categorie }}
        </h1>
        <h3 class="text-center my-5">
            {{ produit.nomProduit }}
        </h3>
        <div class="row">
            <div class="col-4 bg-light">
                <img class="img-medium" src="{{'img/produits/'}}{{ produit.imgNameProduit }}" alt="img produit" />
            </div>
            <div class="col-6 ml-5">
                <p>
                    {{ produit.description|markdown_to_html }}
                </p>
            </div>
        </div>

{% endblock %}





