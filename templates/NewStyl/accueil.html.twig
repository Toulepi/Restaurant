{% extends 'base.html.twig' %}

{#{% block title %}LeNewStyl{% endblock %}#}

{% block body %}

    {{ parent() }}  {# utilisation de l'héritage avec twig #}
    <body>
        <div class="row">
            <div class="col dropdown">
                <a class="btn btn-secondary btn-block">
                    Catalogue
                </a>
            </div>

            <div class="w-100"></div>

            {% for cat in categorie %}
                <div class="col dropdown">
                    <div class="dropdown">
                        <button class="dropdown-item" href="#">{{ cat.nomCatg }} </button>
                        {#
                        <div class="dropdown-content">
                            {% for rub in cat. %}  <!-- Pour chaque catégorie on affiche toutes ses sous-catégories -->
                                <a href="#" target="_blank">{{ rub.nomCatg }}</a> <!-- path('librairie_rubrique' -->
                            {% endfor %}
                        </div>
                        #}


                    </div>
                </div>
            {% endfor %}
        </div>
        <hr>
        <div class="col">
            <div id="carousel" class="carousel slide" data-ride="carousel" data-interval="13000">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 " src="../../public/img/eru.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 " src="../../public/img/taro.jpg" alt="Third slide">
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="">
            <h2>Notre sélection</h2>

            <div class="row">
                {% for pdt in produit|sort %}
                    {% if pdt.id in range(1,4) %}
                        <div id="selection" class="col-sm-3 col">  <!-- d-block can be useful here-->
                            <hr>
                            <h4>{{ pdt.categorie }}</h4>
                            <h2>{{ pdt.nomProduit }}</h2>

                            <img src="{{ 'img/produits/' }}{{ pdt.imgNameProduit }}" alt="product">

                            <blockquote>{{ pdt.description }}</blockquote>
                            <a href="{{ path('panier_ajouter',{id:pdt.id}) }}"><i class="fas fa-shopping-cart"
                                                                                  style="font-size: 1.5rem"></i> </a>
                            <a style="font-size: 1.5rem">{{ pdt.prixProduit }}€</a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </body>


{% endblock %}
